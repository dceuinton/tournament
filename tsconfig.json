{
  "compilerOptions": {
    "outDir": "dist/",
    "sourceMap": true,
    "inlineSourceMap": false,
    // "module": "es6",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es6", "dom"],

    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "include": [
    "src"
  ]
}
